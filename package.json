{
  "name": "express-typescript",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --runInBand --verbose",
    "test:watch": "jest --watchAll --runInBand --verbose",
    "start": "npx ts-node -r tsconfig-paths/register ./src/index.ts",
    "dev": "nodemon",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "tslint --fix -p tsconfig.json -c tslint.json",
    "docker:build": "docker build -t backend .",
    "docker:run": "docker run -d -e DB_HOST=mongo -p 3000:3000 --name backend backend",
    "docker:down": "docker stop backend",
    "docker:remove": "docker container rm backend"
  },
  "nodemonConfig": {
    "env": {
      "NODE_ENV": "development"
    },
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules",
      "node_modules/**/node_modules"
    ],
    "watch": [
      "./src/**/*.ts"
    ],
    "restartable": "rs",
    "exec": "node -r tsconfig-paths/register -r ts-node/register --inspect=3000 ./src/index.ts",
    "ext": "ts, js, json"
  },
  "author": "Ismael Alves",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "class-validator": "^0.12.2",
    "compression": "^1.7.4",
    "connect-multiparty": "^2.2.0",
    "cors": "^2.8.5",
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "envalid": "^6.0.2",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "frameguard": "^3.1.0",
    "googleapis": "^64.0.0",
    "helmet": "^4.2.0",
    "helmet-csp": "^3.2.0",
    "hide-powered-by": "^1.1.0",
    "hsts": "^2.2.0",
    "ienoopen": "^1.1.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "mv": "^2.1.1",
    "nodemailer": "^6.4.16",
    "path": "^0.12.7",
    "pg": "^8.5.0",
    "prom-client": "^12.0.0",
    "rate-limiter-flexible": "^2.1.13",
    "reflect-metadata": "^0.1.13",
    "response-time": "^2.3.2",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "socket.io": "^3.0.1",
    "speedtest-net": "^2.1.1",
    "typeorm": "^0.2.29",
    "uuid": "^8.3.1",
    "x-xss-protection": "^2.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.8",
    "@types/dotenv": "^8.2.0",
    "@types/ejs": "^3.0.5",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.15",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.2",
    "@types/mv": "^2.1.0",
    "@types/node": "^14.14.7",
    "@types/nodemailer": "^6.4.0",
    "@types/response-time": "^2.3.4",
    "@types/rimraf": "^3.0.0",
    "@types/shelljs": "^0.8.8",
    "@types/socket.io": "^2.1.11",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^4.0.5"
  }
}
